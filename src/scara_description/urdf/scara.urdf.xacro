<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="SCARA">

    <xacro:arg name="is_sim" default="true"/>

    <!-- Include -->
    <xacro:include filename="$(find scara_description)/urdf/scara_ros2_control.xacro"/>\
    
    <xacro:if value="$(arg is_sim)">
        <xacro:include filename="$(find scara_description)/urdf/scara_gazebo.xacro"/>
    </xacro:if>

    <!-- Variables -->
    <xacro:property name="PI" value="3.14159265359"/>
    <xacro:property name="effort" value="30.0"/>
    <xacro:property name="velocity" value="10.0"/>

    <!-- Marcos -->
    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="${mass}" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                     iyy="1.0" iyz="0.0"
                     izz="1.0" />
        </inertial>
    </xacro:macro>

    <!-- links -->
    <link name="world"/>
    <link name="base_link">
        <!-- Base Mesh -->
        <visual>
            <origin xyz="0.017 0 0" rpy="${PI/2} 0 ${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/BASEPLATE.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <!-- Rod 1 -->
        <visual>
            <origin xyz="0.067 0 0.168" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.004" length="0.320"/>
            </geometry>
        </visual>
        <!-- Rod 2 -->
        <visual>
            <origin xyz="-0.008 0.048 0.168" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.004" length="0.320"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="-0.008 -0.048 0.168" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.004" length="0.320"/>
            </geometry>
        </collision>
        <!-- Rod 3 -->
        <visual>
            <origin xyz="-0.008 -0.048 0.168" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.004" length="0.320"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="-0.008 -0.048 0.168" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.004" length="0.320"/>
            </geometry>
        </collision>
        <!-- Threaded Rod -->
        <visual>
            <origin xyz="0 0 0.200" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.004" length="0.280"/>
            </geometry>
        </visual>
        <!-- Base cover -->
        <visual>
            <origin xyz="0.017 0 0.382" rpy="-${PI/2} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/TOP_TRIANGLE.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <!-- Motors triangle -->
        <visual>
            <origin xyz="0.017 0 0.31" rpy="-${PI/2} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MOTORS_TRIANGLE.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <xacro:default_inertial mass="1.5"/>
    </link>

    <link name="z_base">
        <visual>
            <origin xyz="0.017 0 0.155" rpy="-${PI/2} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/Z_BASE.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.017 0 0.155" rpy="-${PI/2} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/Z_BASE.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="1.5"/>
    </link>

    <link name="shoulder">
        <!-- arm top -->
        <visual>
            <origin xyz="0 0 -0.0125" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MY_ARM_TOP.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 -0.0125" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MY_ARM_TOP.stl" scale="0.001 0.001 0.001"/>
            </geometry>    
        </collision>
        <!-- arm bottom -->
        <visual>
            <origin xyz="0 0 -0.0415" rpy="${PI/2} 0 -${PI/2} "/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MY_ARM_BOTTOM.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <!-- reduction -->
        <visual>
            <origin xyz="0.018 -0.0245 -0.0130" rpy="${PI} 0 0"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/REDUCTION.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <xacro:default_inertial mass="1.5"/>
    </link>

    <link name="elbow">
        <!-- elbow hub -->
        <visual>
            <origin xyz="-0.0183 0.0242 -0.0185" rpy="${PI} 0 ${PI}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/ARM_HUB.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <!-- elbow arm -->
        <visual>
            <origin xyz="0 0 -0.0215" rpy="${PI/2} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MY_FOREARM.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <!-- camera base-->
        <visual>
            <origin xyz="0.1625 0.0195 -0.0075" rpy="${PI/2} 0 ${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MY_CAMERA_BASE.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 -0.0215" rpy="${PI/2} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MY_FOREARM.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="1.5"/>

        <collision>
            <origin xyz="0.1625 0.0195 -0.0075" rpy="${PI/2} 0 ${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MY_CAMERA_BASE.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="1.5"/>
    </link>

    <link name="gripper_base">        
        <visual>
            <origin xyz="0 0 -0.0430" rpy="${PI/2} 0 0"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MY_GRIPPER_GEAR.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 -0.0430" rpy="${PI/2} 0 0"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MY_GRIPPER_GEAR.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="1.5"/>
        <visual>
            <origin xyz="0 0 -0.0275" rpy="${PI} 0 ${PI}"/>
            <geometry>
                <cylinder radius="0.004" length="0.065"/>
            </geometry>
        </visual>
        <visual>
            <origin xyz="0.0035 0 -0.0525" rpy="${PI} 0 ${PI}"/>
            <geometry>
                <box size="0.01 0.001 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 -0.0275" rpy="${PI} 0 ${PI}"/>
            <geometry>
                <cylinder radius="0.004" length="0.05"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="1.5"/>
    </link>

    <link name="camera">
        <visual>
            <origin xyz="0.03 0.0195 -0.0075" rpy="${PI} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/CAMERA.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>

    <link name="suction_cup">
        <visual>
            <origin xyz="0 0 -0.06" rpy="${PI} 0 ${PI}"/>
            <geometry>
                <cylinder radius="0.008" length="0.005"/>
            </geometry>
        </visual>
    </link>

    <!-- joints -->
    <joint name="virtual_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint> 

    <joint name="joint_1" type="prismatic">
        <parent link="base_link"/>
        <child link="z_base"/>
        <origin xyz="0 0 0.310" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000" velocity="10" lower="-0.221" upper="0.0"/>
        <dynamics damping="0.5" friction="0.5"/>
    </joint> 

    <joint name="joint_2" type="revolute">
        <parent link="z_base"/>
        <child link="shoulder"/>
        <origin xyz="0.067 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="${effort}" velocity="${velocity}" lower="-1.98" upper="1.98"/>
    </joint>

    <joint name="joint_3" type="revolute">
        <parent link="shoulder"/>
        <child link="elbow"/>
        <origin xyz="0.0925 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="${effort}" velocity="${velocity}" lower="-2.27" upper="2.27"/>
    </joint>
    
    <joint name="joint_4" type="revolute">
        <parent link="elbow"/>
        <child link="gripper_base"/>
        <origin xyz="0.102525 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="${effort}" velocity="${velocity}" lower="-${PI}" upper="${PI}"/>
    </joint>

    <!-- joint_5 is a fake joint to allow camera positioning-->
    <joint name="joint_5" type="fixed">
        <parent link="elbow"/>
        <child link="camera"/>
        <origin xyz="0.142525 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="${effort}" velocity="${velocity}" lower="-${PI}" upper="${PI}"/>
    </joint>

    <!-- joint_6 is a fake ravolute joint to allow scara_interface to controll suction gripper state-->
    <joint name="joint_6" type="revolute">
        <parent link="gripper_base"/>
        <child link="suction_cup"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="${effort}" velocity="${velocity}" lower="0.0" upper="${PI}"/>
    </joint>
</robot>
