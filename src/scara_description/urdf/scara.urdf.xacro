<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="SCARA">

    <!-- Include -->
    <xacro:include filename="$(find scara_description)/urdf/scara_gazebo.xacro"/>
    <xacro:include filename="$(find scara_description)/urdf/scara_ros2_control.xacro"/>

    <!-- Variables -->
    <xacro:property name="PI" value="3.14159265359"/>
    <xacro:property name="effort" value="30.0"/>
    <xacro:property name="velocity" value="10.0"/>

    <!-- Marcos -->
    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="${mass}" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                     iyy="1.0" iyz="0.0"
                     izz="1.0" />
        </inertial>
    </xacro:macro>

    <!-- links -->
    <link name="world"/>

    <link name="base_link">
        <!-- Base Mesh -->
        <visual>
            <origin xyz="0.17 0 0" rpy="${PI/2} 0 ${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/BASEPLATE.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <!-- Rod 1 -->
        <visual>
            <origin xyz="0.67 0 1.3" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="2.50"/>
            </geometry>
        </visual>

        <!-- Rod 2 -->
        <visual>
            <origin xyz="-0.08 0.48 1.3" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="2.50"/>
            </geometry>
        </visual>

        <!-- Rod 3 -->
        <visual>
            <origin xyz="-0.08 -0.48 1.3" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="2.50"/>
            </geometry>
        </visual>

        <!-- Threaded Rod -->
        <visual>
            <origin xyz="0 0 1.3" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="2.50"/>
            </geometry>
        </visual>

        <!-- Base cover -->
        <visual>
            <origin xyz="0.17 0 3.08" rpy="-${PI/2} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/TOP_TRIANGLE.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <!-- Motors triangle -->
        <visual>
            <origin xyz="0.17 0 3.1" rpy="-${PI/2} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/MOTORS_TRIANGLE.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <xacro:default_inertial mass="1.5"/>
    </link>

    <link name="z_base">
        <visual>
            <origin xyz="0.17 0 1.55" rpy="-${PI/2} 0 -${PI/2}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/Z_BASE.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <xacro:default_inertial mass="1.5"/>
    </link>

    <link name="shoulder">
        <!-- arm top -->
        <visual>
            <origin xyz="-0.015 0.5 -0.4" rpy="${PI/2} 0 0"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/ARM_TOP.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <!-- arm bottom -->
        <visual>
            <origin xyz="0.49 0 -0.44" rpy="${PI/2} 0 -${PI/2} "/>
            <geometry>
                <mesh filename="package://scara_description/meshes/ARM_BOTTOM.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <!-- reduction -->
        <visual>
            <origin xyz="0.18 -0.245 -0.07" rpy="${PI} 0 0"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/REDUCTION.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <xacro:default_inertial mass="1.5"/>
    </link>

    <link name="elbow">
        <!-- elbow -->

        <!-- elbow hub -->
        <visual>
            <origin xyz="-0.187 0.245 -0.11" rpy="${PI} 0 ${PI}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/ARM_HUB.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <!-- elbow arm -->
        <visual>
            <origin xyz="-0.187 0.245 -0.11" rpy="${PI} 0 ${PI}"/>
            <geometry>
                <mesh filename="package://scara_description/meshes/FOREARM.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>


        <xacro:default_inertial mass="1.5"/>
    </link>

    <!-- joints -->
    <joint name="virtual_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint> 

    <joint name="joint_1" type="prismatic">
        <parent link="base_link"/>
        <child link="z_base"/>
        <origin xyz="0 0 0.9" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="${effort}" velocity="${velocity}" lower="0.0" upper="1.47"/>
    </joint> 

    <joint name="joint_2" type="revolute">
        <parent link="z_base"/>
        <child link="shoulder"/>
        <origin xyz="0.67 0 -0.07" rpy="0 0 -1.745"/>
        <axis xyz="0 0 1"/>
        <limit effort="${effort}" velocity="${velocity}" lower="0.0" upper="3.490"/>
    </joint>

        <joint name="joint_3" type="revolute">
        <parent link="shoulder"/>
        <child link="elbow"/>
        <origin xyz="0.92 0 0" rpy="0 0 2.269"/>
        <axis xyz="0 0 1"/>
        <limit effort="${effort}" velocity="${velocity}" lower="-4.538" upper="0.0"/>
    </joint>
</robot>
